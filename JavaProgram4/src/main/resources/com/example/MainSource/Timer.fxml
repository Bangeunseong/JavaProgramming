<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="100" prefWidth="200"
    fx:controller="com.example.TimerController">
    <children>  
        <Label fx:id="lblTime" alignment="CENTER" layoutX="25" layoutY="15" 
            prefHeight="35" prefWidth="150" style="-fx-background-color: black; -fx-text-fill: yellow;
            -fx-font-size: 20; -fx-background-radius: 10;" text="00:00:00"/>
        <Button fx:id="btnStart" layoutX="46" layoutY="63" text="Start"/>
        <Button fx:id="btnStop" layoutX="110" layoutY="63" text="Stop"/>
    </children>
</AnchorPane>
